{
  "name": "@ansvar/swedish-law-mcp",
  "version": "0.1.0",
  "description": "MCP server for Swedish statutes and regulations - Query Swedish law directly from Claude",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "swedish-law-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "data/database.db"
  ],
  "scripts": {
    "build": "tsc",
    "build:db": "tsx scripts/build-db.ts",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ingest": "tsx scripts/ingest-riksdagen.ts",
    "check-updates": "tsx scripts/check-updates.ts",
    "lint": "eslint src tests",
    "prepublishOnly": "npm run build",
    "postinstall": "test -d dist || npm run build || true"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "better-sqlite3": "^12.6.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.29",
    "jsdom": "^27.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/swedish-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/swedish-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/swedish-law-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "swedish-law",
    "sweden",
    "legal",
    "compliance",
    "riksdagen",
    "sfs",
    "ansvar"
  ],
  "author": "Ansvar Systems AB <hello@ansvar.ai>",
  "license": "Apache-2.0"
}
